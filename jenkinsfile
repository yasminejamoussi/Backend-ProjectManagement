pipeline {
    agent any

    environment {
        BACKEND_REPO = 'https://github.com/yasminejamoussi/Backend-ProjectManagement.git'
        FRONTEND_REPO = 'https://github.com/yasminejamoussi/FrontEnd-ProjectManagement.git'
        SONAR_TOKEN = credentials('sonarqube-token') // ğŸ”¹ RÃ©cupÃ©ration du token depuis Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "ğŸ§¹ Nettoyage de l'espace de travail..."
                    // Moved cleanWs to post section to avoid race conditions

                    echo "ğŸ“¥ Clonage du Backend..."
                    sh "git clone ${BACKEND_REPO} backend"

                    echo "ğŸ“¥ Clonage du Frontend..."
                    sh "git clone ${FRONTEND_REPO} frontend"
                }
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                script {
                    dir('frontend') {
                        echo "ğŸ“¦ Installation des dÃ©pendances du frontend..."
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                script {
                    dir('backend') {
                        echo "ğŸ“¦ Installation des dÃ©pendances du backend..."
                        sh 'npm install'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner' // ğŸ”¹ Assurez-vous que le scanner est bien configurÃ©
                    withSonarQubeEnv('SonarQubeServer') { // ğŸ”¹ Match this with your configured SonarQube server name
                        dir('backend') {
                            echo "ğŸš€ DÃ©marrage de l'analyse SonarQube..."
                            timeout(time: 10, unit: 'MINUTES') {
                                sh """
                                    ${scannerHome}/bin/sonar-scanner \
                                    -Dsonar.projectKey=projectpi \
                                    -Dsonar.sources=. \
                                    -Dsonar.host.url=http://192.168.33.10:9000 \
                                    -Dsonar.login=${SONAR_TOKEN} \
                                    -Dsonar.verbose=true
                                """
                            }
                        }
                    }
                }
            }
        }

        stage('Unit Test Backend') {
            steps {
                script {
                    dir('backend') {
                        sh 'npm install --save-dev jest-junit' // ğŸ”¹ Ajoute cette ligne avant d'exÃ©cuter les tests
                        timeout(time: 5, unit: 'MINUTES') {
                            sh 'npm test -- --ci --forceExit --reporters=default --reporters=jest-junit'
                        }
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    dir('frontend') {
                        echo "ğŸ› ï¸ Construction du frontend..."
                        sh 'npm run build'
                    }
                }
            }
        }

        stage('Check Docker Compose') {
            steps {
                script {
                    sh 'docker-compose --version || echo "Docker Compose not found"'
                }
            }
        }

        stage('Building Docker Images') {
            steps {
                script {
                    dir('backend') {
                        echo "ğŸš€ Build des images Docker..."
                        sh 'docker-compose -f docker-compose.yml build || exit 1'
                    }
                }
            }
        }

        stage('Run Application') {
            steps {
                script {
                    echo "ğŸš€ DÃ©marrage de l'application..."
                    timeout(time: 5, unit: 'MINUTES') {
                        sh 'docker-compose up -d || exit 1'
                    }
                }
            }
        }
    }

post {
        success {
            echo 'âœ… Pipeline exÃ©cutÃ© avec succÃ¨s !'
        }
        failure {
            echo 'âŒ Le pipeline a Ã©chouÃ©. VÃ©rifiez les logs.'
        }
        always {
            node('master') { // ğŸ”¹ Ajout d'un label 'any' pour utiliser n'importe quel agent disponible
                echo "ğŸ“‚ Nettoyage de l'espace de travail aprÃ¨s exÃ©cution..."
                cleanWs() // Nettoie le workspace aprÃ¨s le pipeline
            }
        }
    }
}