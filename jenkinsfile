                    echo "‚úÖ Mongo-test est accessible !"
                    timeout(time: 30, unit: 'MINUTES') { // Augmenter √† 30 minutes pour plus de marge
                        sh 'docker-compose run --rm api npm test'
                    }
                }
            }
        }*/


       stage('Build Frontend') {
    steps {
        dir('frontend/projectmanagement') {
            echo "üõ†Ô∏è Construction du frontend..."
            sh 'npm install'
            echo "üîç Liste des scripts disponibles dans package.json :"
            sh 'npm run'
            sh 'npm run build'
        }
    }
}
   stage('Publish to Nexus') {
            steps {
                script {
                    echo "üì§ Publication des packages npm vers Nexus..."
                    withCredentials([usernamePassword(credentialsId: NEXUS_CREDENTIAL_ID, usernameVariable: 'NEXUS_USERNAME', passwordVariable: 'NEXUS_PASSWORD')]) {
                        // G√©n√©rer un token d'authentification pour npm
                        sh '''
                            echo "//192.168.33.10:8081/repository/npm-repo/:_auth=$(echo -n "${NEXUS_USERNAME}:${NEXUS_PASSWORD}" | base64)" >> ~/.npmrc
                        '''

                        // Backend
                        dir('backend') {
                            sh 'npm version patch --no-git-tag-version' // Incr√©menter la version
                            sh 'npm publish --registry http://192.168.33.10:8081/repository/npm-repo/'
                        }

                        // Frontend
                        dir('frontend') {
                            sh 'npm version patch --no-git-tag-version' // Incr√©menter la version
                            sh 'npm publish --registry http://192.168.33.10:8081/repository/npm-repo/'
                        }
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo "üõ†Ô∏è Construction de l'image backend..."
                    dir('backend') {
                        def imageName = "projectmanagement"
                        def imageTag = "${env.BUILD_NUMBER}"
                        def fullImageName = "${imageName}:${imageTag}"

                        // Build de l'image localement
                        sh "docker build -t ${fullImageName} ."
                    }
                }
            }
        }
  
    
   /* stage('Publish Docker Image to Docker Hub') {
            steps {
                script {
                    echo "üì§ Publication de l'image vers Docker Hub..."
                    dir('backend') {
                        def imageName = "projectmanagement"
                        def imageTag = "${env.BUILD_NUMBER}"
                        def fullImageName = "${imageName}:${imageTag}"
                        withCredentials([usernamePassword(credentialsId: DOCKERHUB_CREDENTIALS, usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                            sh "echo \$DOCKERHUB_PASSWORD | docker login -u \$DOCKERHUB_USERNAME --password-stdin"
                            sh "docker tag ${fullImageName} ${DOCKERHUB_USERNAME}/${imageName}:${imageTag}"
                            sh "docker push ${DOCKERHUB_USERNAME}/${imageName}:${imageTag}"
                            sh "docker tag ${fullImageName} ${DOCKERHUB_USERNAME}/${imageName}:latest"
                            sh "docker push ${DOCKERHUB_USERNAME}/${imageName}:latest"
                        }
                    }
                }
            }
        }*/

        stage('Run Application') {
    steps {
        script {
            echo "üöÄ D√©marrage de l'application..."
            dir('backend') { // Run in backend directory
                sh 'docker-compose -f docker-compose.yml up -d'
            }
        }
    }
}
/*stage('Run Application') {
    steps {
        script {
            echo "üöÄ D√©marrage de l'application..."
            dir('backend') {
                withEnv(["DOCKER_HOST=tcp://172.16.1.235:2375", "COMPOSE_HTTP_TIMEOUT=120"]) {
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }
    }
}*/
    }


 post {
    success {
        echo '‚úÖ Pipeline ex√©cut√© avec succ√®s !'
    }
    failure {
        echo '‚ùå Le pipeline a √©chou√©. V√©rifiez les logs.'
    }
    always {
        echo "üìÇ Nettoyage de l'espace de travail apr√®s ex√©cution..."
        sh 'docker-compose down -v || true'
        cleanWs()
    }
}
    
}
